      item2Name: 'Chewing Gum',
      item2Price: '$0.99',
      item3Name: 'Bottled Water',
      item3Price: '$3.33',
      itemsCount: '3',
      total: '$7.31',
      cash: '$8.0',
      change: '$0.69',
      paymentId: '#743289384279',
      template: '#{baseurl}cards/official-receipt-1.txt',
    }


